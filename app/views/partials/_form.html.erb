<div class="container w-50">
  <%= simple_form_for page do |f| %>

    <%= f.input :title, label: 'Project Name' %>

    <!-- <%= f.button :submit, class: "btn-primary" %> -->
    <% if action_name == "edit"%>
      <%= link_to "Delete",
                    page_path(page),
                    method: :delete,
                    class: "btn btn-danger",
                    data: { confirm: "Are you sure you want to delete this page?" } %>
    <% end %>
  <% end %>
</div>
